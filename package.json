{
  "name": "bhabit-cbmooners-4",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev:nowatch": "node server.js",
    "dev": "nodemon --watch server.js --ignore 'node_modules/*' --ignore '.git/*' --ignore 'api/**/*.json' --ignore 'assets/**/*.svg' --ignore 'scripts/**/*.sh' server.js",
    "lint": "eslint . --ext .js,.jsx,.mjs --max-warnings=0",
    "format": "prettier -w .",
    "health": "node scripts/health-check.js",
    "test:backend": "pytest -q",
    "test:worker": "npm run typecheck --prefix moonwalking_mobile/backend-workers/moonwalking-worker",
    "test-all": "npm run test:backend && npm run test:worker",
    "dev:ws:seed": "./scripts/ws-snapshots-dev.sh"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "eslint": "^9.12.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "env": {
      "es2024": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 100
  }
}
