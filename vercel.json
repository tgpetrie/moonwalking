{
  "builds": [
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://moonwalker.onrender.com/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "build": {
    "env": { "VITE_API_URL": "https://moonwalker.onrender.com/" }
  }
}
