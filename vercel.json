{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://moonwalker.onrender.com/"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "https://moonwalker.onrender.com/"
    }
  }
}
